.swiper {
    height: 240rpx;
    width: 100%;
}

.swiper-image {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    display: inline;
}

.goodsContainer {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    box-sizing: content-box;
    padding: 24rpx;
}

.goodsBox {
    width: 339rpx;
    height: 472rpx;
    background-color: #fff;
    overflow: hidden;
    margin-bottom: 24rpx;
}

.goodsBox .img-box {
    width: 339rpx;
    height: 339rpx;
    overflow: hidden;
}

.goodsBox .img-box image {
    width: 339rpx;
    height: 339rpx;
}

.goodsBox .goods-title {
    width: 280rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 24rpx;
    padding: 24rpx 0 0rpx 0;
    color: #000;
    margin-left: 24rpx;
}

.goodsBox .good-price {
    width: 280rpx;
    overflow: hidden;
    font-size: 24rpx;
    padding: 24rpx 0;
    color: #e64340;
    margin-left: 24rpx;
}

.top_nav {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 10rpx;
    color: black;
}

.top_nav_item {
    text-align: center;
    font-size: 28rpx;
    width: 130rpx;
    border-radius: 8rpx;
    box-sizing: border-box;
}

.top_nav_item image {
    width: 70rpx;
    height: 70rpx;
    display: inline-block;
    margin: 0 35rpx;
}

.top_nav_item text {
    color: blue;
    font-size: 24rpx;
}

.hover {
    height: 1px;
    background-color: black;
    opacity: 0.2;
    margin-top: 1px
}

.roller image {
    width: 100%;
    height: 200px;
    display: inline-block;
}

.abc {
    display: flex;
}